extends layout

block content
  div(class='forest')
    br
    br
    br
    br
    h1(class='header')= "Book a Space" 
    a(class='list-direct' href='/spaces/new' class='button button-primary')= button
  div(class='list')
    br
    br
    br
    if spaces.length == 1
      h2= "There are no spaces available"
    else
      table(class="u-full-width")
        thead
          tr
            th= "Name"
            th= "Description"
            th= "Price"
        tbody
          each space in spaces
            tr
              td= space.name
              td= space.description
              td= space.price
